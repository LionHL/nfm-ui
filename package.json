{
  "name": "nfm-ui",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "DEBUG=* node bin/app",
    "test": "npm run test:stylelint && npm run test:eslint && npm run test:puglint",
    "test:stylelint": "stylelint 'dev/css/**/*.pcss'",
    "test:eslint": "eslint 'dev/js/**/*.js'",
    "test:puglint": "pug-lint dev/*",
    "clean": "del -f docs",
    "copy": "npm run copy:postcss && npm run copy:public && npm run copy:images && npm run copy:libs",
    "copy:postcss": "copyfiles -u 1 'dev/css/**/*.pcss' docs",
    "copy:libs": "copyfiles -u 1 'dev/libs/semantic/dist/semantic.css' 'dev/libs/semantic/dist/themes/**' 'dev/libs/c3/**' 'dev/libs/d3/**' 'dev/libs/hint.css/hint.css' docs",
    "copy:public": "copyfiles 'public/**/*' docs",
    "copy:images": "copyfiles -u 1 'dev/images/**/*' docs",
    "css": "npm run css:build && npm run css:clean && npm run css:rename && npm run css:process",
    "css:build": "postcss -r -c postcss.json",
    "css:clean": "del -f 'docs/css/**/_*.pcss' 'docs/css/mixins'",
    "css:rename": "renamer --find 'pcss' --replace 'css' docs/css/**/*.pcss",
    "css:process": "node build/css-process",
    "js": "webpack --optimize-dedupe --optimize-occurrence-order --progress --colors --display-error-details --config webpack.config.js",
    "header": "node build/header",
    "pug": "pug -O pug.config.json -o docs -P dev/*.pug",
    "__build__": "npm run clean && npm run copy && npm run css && npm run header && npm run pug",
    "build": "npm run test && NODE_ENV=docs npm run __build__"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LionHL/nfm-ui.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LionHL/nfm-ui/issues"
  },
  "homepage": "https://github.com/LionHL/nfm-ui#readme",
  "dependencies": {
    "async": "^2.0.1",
    "buffer-concat": "^1.0.0",
    "clean-css": "^3.4.19",
    "copyfiles": "^1.0.0",
    "del-cli": "^0.2.0",
    "eslint": "^3.5.0",
    "glob": "^7.1.0",
    "koa": "^1.2.4",
    "koa-favicon": "^1.2.1",
    "koa-pug": "^3.0.0-0",
    "koa-router": "^5.4.0",
    "koa-static": "^2.0.0",
    "koa-webpack-dev-middleware": "^1.2.2",
    "postcss": "^5.1.2",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-each": "^0.9.3",
    "postcss-scss": "^0.3.1",
    "postcss-short": "^1.4.0",
    "precss": "^1.4.0",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.3.0",
    "renamer": "^0.5.7",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "webpack": "^1.13.2"
  }
}
