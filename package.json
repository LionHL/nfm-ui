{
  "name": "nfm-ui",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "node bin/app",
    "test": "npm run test:stylelint && npm run test:eslint",
    "test:stylelint": "stylelint 'dev/css/**/*.pcss'",
    "test:eslint": "eslint 'dev/js/**/*.js'",
    "clean": "del -f dist",
    "copy": "copyfiles -u 1 'dev/css/**/*.pcss' 'dev/css/libs/semantic/dist/semantic.css' 'dev/css/libs/semantic/dist/themes/**' dist",
    "css": "npm run css:build && npm run css:clean && npm run css:rename",
    "css:build": "postcss -r -c postcss.json",
    "css:clean": "del -f dist/css/**/_*.pcss",
    "css:rename": "renamer --find 'pcss' --replace 'css' dist/css/**/*.pcss",
    "__build__": "npm run clean && npm run copy && npm run css",
    "build": "npm run test && npm run __build__"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LionHL/nfm-ui.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LionHL/nfm-ui/issues"
  },
  "homepage": "https://github.com/LionHL/nfm-ui#readme",
  "dependencies": {
    "copyfiles": "^1.0.0",
    "del-cli": "^0.2.0",
    "eslint": "^3.5.0",
    "koa": "^1.2.4",
    "koa-static": "^2.0.0",
    "koa-webpack-dev-middleware": "^1.2.2",
    "postcss": "^5.1.2",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-each": "^0.9.3",
    "postcss-short": "^1.4.0",
    "precss": "^1.4.0",
    "renamer": "^0.5.7",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "webpack": "^1.13.2"
  }
}
