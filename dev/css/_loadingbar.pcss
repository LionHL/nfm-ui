/* loadingbar css start */
.loadingbar {
  position: fixed;
  z-index: 2147483647;
  top: 0;
  left: -6px;
  width: 0;
  height: 5px;
  border-radius: 1px;
  transition: opacity 500ms ease-in-out;

  dt, dd {
    position: absolute;
    top: 0;
    height: 2px;
    border-radius: 100%;
  }

  dt {
    opacity: .6;
    width: 180px;
    right: -80px;
    clip: rect(-6px, 90px, 14px, -6px);
  }

  dd {
    opacity: .6;
    width: 20px;
    right: 0;
    clip: rect(-6px, 22px, 14px, 10px);
  }

  &.waiting {
    width: 0;
    animation: move 10s linear forwards;
  }

  &.waiting dd, &.waiting dt {
    animation: pulse 1.5s ease-out 1.8s infinite;
  }

  &.end {
    width: 30%;
    animation: end .5s linear forwards;
  }

  @at-root {
    @keyframes move {
      0% { width: 0; }
      100% { width: 30%; }
    }

    @keyframes end {
      70% {
        width: 100%;
        opacity: 1;
      }

      100% {
        width: 120%;
        opacity: 0;
      }
    }

    @keyframes pulse {
      30% { opacity: .6; }
      60% { opacity: 0; }
      100% { opacity: .6; }
    }
  }
}

/* loadingbar css end */