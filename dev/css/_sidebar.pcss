/* 左侧折叠菜单栏 sidebar */
.nfm.sidebar {
  position: absolute 0 * * 0;
  padding: 60px 0 10px;
  width: 250px;
  height: 100%;
  overflow: hidden;
  z-index: 2;
}

.nfm .main-sidebar {
  height: 100%;
  overflow: scroll;
  ul {
    padding-left: 15px;
    margin: 0;
    list-style: none;
  }
  ul > li {
    list-style: none;
  }
  ul li > a {
    display: inline-block;
    line-height: 20px;
    font-size: 14px;
    white-space: nowrap;
    vertical-align: middle;
  }
  ul li > a i:first-child {
    margin-right: 0;
    width: 10px;
  }
  ul:first-child {
    padding-left: 5px;
  }
  i.loading {
    display: none;
  }
}