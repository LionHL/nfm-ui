/* 左侧折叠菜单栏 sidebar */
.nfm.sidebar {
  position: absolute 0 * * 0;
  padding: 60px 0 10px;
  width: 250px;
  height: 100%;
  background-color: #191919;
  border-right: 1px solid rgba(34, 36, 38, .15);
  overflow: hidden;
  z-index: 2;
}

.nfm .main-sidebar {
  height: 100%;
  overflow: scroll;
  ul {
    padding-left: 15px;
    margin: 0;
    list-style: none;
  }
  ul > li {
    list-style: none;
  }
  ul li > a {
    display: inline-block;
    line-height: 20px;
    font-size: 14px;
    color: rgba(255, 255, 255, .5);
    white-space: nowrap;
    vertical-align: middle;
  }
  ul li > a:hover {
    color: rgba(255, 255, 255, .9);
  }
  ul li > a i:first-child {
    margin-right: 0;
    width: 10px;
  }
  ul:first-child {
    padding-left: 5px;
  }
  i.loading {
    display: none;
  }
}

/* 自定义icon颜色 */
i.i-color.icon {
  @mixin nfm-color rgba(61,163,239,0.95);
}