/**
 * 载入动画
 */

@import "mixins/_layer.pcss";

.nfm-load {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: $loadLayer;
  background: #343640;

  .spinner {
    width: 40px;
    height: 40px;
    position: relative;
    z-index: $loadSpinnerLayer;
    top: 40%;
    margin: auto;
  }

  .double-bounce1,
  .double-bounce2 {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: #fff;
    opacity: .6;
    position: absolute;
    top: 0;
    left: 0;
    animation: load-loading 2.0s infinite ease-in-out;
  }

  .double-bounce2 {
    animation-delay: -1.0s;
  }

  @at-root {
    @keyframes load-loading {
      0%, 100% {
        transform: scale(0);
        -webkit-transform: scale(0);
      }

      50% {
        transform: scale(1.0);
        -webkit-transform: scale(1.0);
      }
    }
  }
}

.nfm-load.end {
  animation: load-end .5s ease-out;
  animation-fill-mode: forwards;

  @at-root {
    @keyframes load-end {
      0% {
        opacity: 1;
      }

      100% {
        opacity: 0;
        z-index: -1;
      }
    }
  }

  .spinner {
    display: none;
  }
}