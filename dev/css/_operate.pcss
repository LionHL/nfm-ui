/* 操作块operate样式 */

.nfm.operate {
  margin-bottom: 10px;
  @mixin clearfix;
  .nfm.buttons {
    border: 1px solid rgba(255, 255, 255, .8);
    @mixin nfm-float right;
  }
  .nfm.buttons .button {
    color: rgba(255, 255, 255, .85) !important;
  }
  .nfm.buttons .button:hover {
    color: #000 !important;
    background-color: rgba(255, 255, 255, .9) !important;
  }
  .nfm.buttons .button:active,
  .nfm.buttons .button:focus {
    background: #60b044 !important;
    color: rgba(255, 255, 255, .9) !important;
  }
  .nfm.buttons .detele.button:hover,
  .nfm.buttons .detele.button:focus,
  .nfm.buttons .detele.button:active {
    color: rgba(255, 255, 255, .9) !important;
    background: #DB2828 !important;
  }
}

