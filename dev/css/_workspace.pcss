/**
 * 工作区
 */

.nfm-workspace {
  position: absolute 50px 0 0 0;
  margin-left: 250px;
  padding: 20px 10px 10px;
  overflow: scroll;
  z-index: $workspaceLayer;
}

/* 操作按钮 */
.workspace-operate {
  @mixin clearfix;
  margin-bottom: 15px;

  .buttons {
    border-radius: 4px;
    float: right;
  }

  .buttons .button:first-child {
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
  }

  .buttons .button:last-child {
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
  }
}

/* 面包屑导航 */
.workspace-breadcrumb {
  @mixin clearfix;
  margin-bottom: 15px;

  .ui.breadcrumb {
    vertical-align: inherit;

    i.star {
      margin-left: 5px;
    }
  }
}

/* 表格 */
.workspace-table {
  border-radius: 5px;
  overflow: hidden;
  z-index: $workspaceTableLayer;
  position: relative;
}

.workspace-table .table {
  margin: 0;

  td {
    font-size: 13px;
  }

  .ui.checkbox {
    vertical-align: text-top;
  }

  .ui.checkbox label {
    padding-left: 0;
  }

  .ui.input input {
    padding: 5px 8px;
  }
}

/* Menu */
.nfm-menu {
  position: absolute;
  z-index: $workspaceMenuLayer;
  display: none;
  margin: 0 !important;
}