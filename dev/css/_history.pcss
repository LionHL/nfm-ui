/**
 * 文件历史
 */

.nfm-history {
  position: absolute 50px -310px * *;
  width: 300px;
  height: 100%;
  overflow: hidden;
  z-index: $historyLayer;
  background: $historyBg;
  border-left: $historyBorderLeft;

  .history-title {
    margin: 20px;

    a {
      float: right;
    }
  }

  .history-list {
    margin: 20px;

    a {
      float: right;
      margin: 0 2px;
      position: relative;
      top: 2px;
    }
  }

  &.close {
    animation: history-close .5s;
    animation-fill-mode: forwards;
  }

  @at-root {
    @keyframes history-close {
      0% {
        right: 0;
      }

      100% {
        right: -310px;
      }
    }
  }

  &.open {
    animation: history-open .5s;
    animation-fill-mode: forwards;
  }

  @at-root {
    @keyframes history-open {
      0% {
        right: -310px;
      }

      100% {
        right: 0;
      }
    }
  }
}