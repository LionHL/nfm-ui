/* 自定义table样式 */
.table-wrap {
  position: absolute 68px 0 20px 0;
  padding: 0 10px;
}

.nfm-table {
  height: 100%;
  border-radius: 5px;
  overflow: hidden;
  z-index: 2;
  @mixin positions relative;
  &> .nfm.table:first-child {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }
}

.nfm.table {
  margin: 0;
  border: none;
  .ui.checkbox {
    vertical-align: text-top;
  }
  .ui.checkbox label {
    padding-left: 0;
  }
  tbody tr:nth-child(even) {
    background-color: rgba(0, 0, 50, .02);
  }
  td {
    font-size: 13px;
  }
}

/* table scroll */
.scroll-table {
  position: absolute 46px 0 0 0;
  overflow: scroll;
  &> .nfm.table:first-child {
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
}