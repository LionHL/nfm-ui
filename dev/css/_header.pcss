/* 头部样式 相对semantic做样式调整 */

.nfm.header {
    @mixin positions relative;
    padding: 4px 10px;
    background: #f5f5f5;
    border-bottom: 1px solid rgba(34, 36, 38, .15);
    box-shadow: 0px 1px 2px 0 rgba(34, 36, 38, .15);
    z-index: 9;
}

.nfm.menu {
    margin: 0;
    border: 0;
    border-radius: 0;
}

.nfm.menu .item > .input input {
    padding-top: 5px;
    padding-bottom: 5px;
}

.nfm.menu .ui.dropdown .menu > .item {
    border-radius: 0;
    &:hover {
        color: #fff !important;
        background-color: #4078c0 !important;
    }
    .icon:not(.dropdown) {
        margin-right: .2em;
    }
}

.nfm-right {
    @mixin nfm-float right;
}