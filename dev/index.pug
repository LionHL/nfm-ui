                  |  detail.js
              li
                a(href='javascript:;')
                  i.mini.icon
                  i.nfm-icon.i-js.icon
                  |  layout.js
          li
            a(href='javascript:;')
              i.mini.caret.right.icon
              i.i-color.folder.icon
              i.spinner.loading.icon
              |  Node4
    // sidebar end
    // workspace start
    .nfm-workspace
      // operate start
      .workspace-operate
        // search start
        // 备注：搜索时添加class loading，disabled
        .ui.right.action.left.icon.input
          i.icon.search
          input(type='text' placeholder='Search...')
          .J_SearchBtn.ui.basic.floating.dropdown.button
            .text This Page
            i.dropdown.icon
            .menu
              .item This Page
              .item All Files
        // search end
        .ui.small.buttons
          button.ui.primary.basic.button.hint--bottom.hint--rounded(aria-label='Create a new folder')
            i.wizard.icon
            | New
          button.ui.primary.basic.button.hint--bottom.hint--rounded(aria-label='Upload files/zips')
            i.upload.icon
            | Upload
      // operate end
      .workspace-breadcrumb
        i.home.icon
        .ui.small.breadcrumb
          a.section Home
          .divider  / 
          a.section Store
          .divider  / 
          .active.section
            | T-Shirt
            a.J_Favorite.hint--bottom.hint--rounded(href='javascript:;' aria-label='Add to favorites')
              i.icon.empty.star.yellow
      // nfm table start
      .workspace-table
        table.ui.fixed.table
          thead
            tr
              th(style='width:40px;')
              th Name
              th(style='width:150px;') Title
