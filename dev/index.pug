      // nfm-table end
    // workspace end
    // history start
    .nfm-history
      h4.history-title.clearfix
        span.left 文件历史
        a.right(href='javascript:;')
          i.remove.icon.history-close
      h4.ui.horizontal.divider
        i.history.icon
      .history-list
        .ui.feed.clearfix
          .event
            .label
              img(src='http://semantic-ui.com/images/avatar/small/elliot.jpg')
            .content
              .summary
                .date 4 hours ago
                a.J_HistoryReset.hint--bottom-left.hint--rounded(aria-label='Reset to this version' href='javascript:;')
                  i.icon.repeat
                a.J_HistoryCompare.hint--bottom-left.hint--rounded(aria-label='Compare with current version' href='javascript:;')
                  i.icon.file.code.outline
        .ui.feed.clearfix
          .event
            .label
              img(src='http://semantic-ui.com/images/avatar/small/jenny.jpg')
            .content
              .summary
                .date 2 days ago
                a.J_HistoryReset.hint--bottom-left.hint--rounded(aria-label='Reset to this version' href='javascript:;')
                  i.icon.repeat
