extends layouts/_layout

block title
  title 登陆 - nfm

block header
  link(rel='stylesheet' href=urls.css + 'css/nfm.css')

block body
  .nfm-container-login
    // header start
    include layouts/_header
    // header end
    .nfm-login
      h3.ui.header Log In
      form.ui.form
        .field
          .ui.left.icon.input
            input(type='text' name='username' placeholder='UserName or Email')
            i.user.icon
        .field
          .ui.left.icon.input
            input(type='password' name='password' placeholder='Password')
            i.lock.icon
        button.ui.green.right.button(type='submit') Login
      //- .ui.message
      //-   p 新建账号请联系管理员

block footer
  script(src=urls.js + 'script/login.js')
